{
  "name": "codetopdf",
  "displayName": "Code to Pdf",
  "description": "Generate a Pdf from Code",
  "version": "0.0.1",
  "publisher": "herzogmatthias",
  "repository": {
    "url": "https://github.com/herzogmatthias/code-to-pdf"
  },
  "keywords": [
    "pdf",
    "code to pdf",
    "convert",
    "convert code",
    "code"
  ],
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.40.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codetopdf.convert"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "CodeToPdf",
      "properties": {
        "codeToPdf.openHTMLPageInBrowser": {
          "type": "boolean",
          "description": "If true it opens a browser window with the HTML page which will be converted",
          "default": false
        },
        "codeToPdf.ignoredFileExtensions": {
          "type": "array",
          "description": "Stores file extensions which will be ignored when converting to pdf e.g. ['.html']",
          "default": [
            ".txt",
            ".pdf",
            ".jpg",
            ".jpeg",
            ".png",
            ".xlsx",
            ".docx",
            ".pptx",
            ".ico",
            "map"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "codetopdf.convert",
        "title": "Convert Code To PDF"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codetopdf.convert",
          "group": "z_commands"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.8",
    "@types/vscode": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "chai": "^4.3.4",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "html-loader": "^2.1.2",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "puppeteer": "^8.0.0",
    "utf-8-validate": "^5.0.4"
  },
  "announcement": {
    "onVersion": "0.01",
    "message": "[NEW] Initial Release"
  }
}
